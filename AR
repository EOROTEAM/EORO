#!/usr/bin/env bash
cd $(cd $(dirname $0); pwd)

if [ ! -f "./AR" ]; then
lua ./EORO.lua
exit;
else
Token=`cat ./AR`
BotId=`echo $Token | cut -f1 -d":"`
BotUser=$(redis-cli get ${BotId}:BotUser:)
if [[ $BotUser == "" ]]; then
rm -fr ./AR
lua ./EORO.lua
exit;
fi
fi

chmod +x ./tg

if [ "$1" == "A" ]; then
while(true) do
sudo rm -fr ~/.telegram-cli
./tg -s ./EORO.lua $@ --bot=$Token
done
else
if ! screen -list | grep -q "$BotUser"; then
screen -S $BotUser ./AR A
else
screen -X -S $BotUser quit
screen -S $BotUser ./AR A
fi
fi
